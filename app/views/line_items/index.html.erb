<%= turbo_frame_tag request.headers['Turbo-Frame'], class: 'w-full' do %>
  <% @slots.each do |date, line_items|%>
    <%= turbo_frame_tag date, class: '' do %>
      <%= render CalendarSlotComponent.new(date: date) do %>
        <% line_items.each do |line_item| %>
          <%= turbo_frame_tag dom_id(line_item), class: "" do %>
            <%= render LineItemComponent.new(line_item: line_item) %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>